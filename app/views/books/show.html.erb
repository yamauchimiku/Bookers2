<%= flash[:notice] %>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
     <table class="table">
     <tbody><tr></tr>
      <tr>
	     <th>name</th>
	     <th><%= @user.name %></th>
      </tr>
      <tr>
	     <th>introduction</th>
	     <th><%= @user.introduction %></th>
      </tr>
     </tbody></table>
     <p><%= link_to "",edit_user_path(@user), class: "btn btn-outline-secondary btn-block fas fa-user-cog" %></p>


      <h2 class="mt-3">New book</h2>
      <%= form_with model:@newbook, local:true do |f| %>

      <h4>Title</h4>
      <%= f.text_field :title %>

      <h4>Option</h4>
      <%= f.text_area :body %><br>

      <%= f.submit 'Create Book', class: "btn btn-success" %>
     <% end %>
    </div>

<p id="notice"></p>
   <div class="col-md-8 offset-md-1">
  		<h2>Book detail</h2>
  		<table class="table">
  		  <tbody><tr>
          <td><%= link_to user_path(@book.user_id) do %>
               <%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
               <%= @book.user.name %>
              <% end %>
          </td>
          <td><%= link_to @book.title,book_path(@book) %></td>
          <td><%= @book.body%></td>
          <td><% if @book.favorited_by?(current_user) %>
          <p>
             <%= link_to book_favorites_path(@book.id), method: :delete do %>
             ❤️<%= @book.favorites.count %>
            <% end %>
          </p>
            <% else %>
          <p>
             <%= link_to book_favorites_path(@book.id), method: :post do %>
             ♥️<%= @book.favorites.count %>
            <% end %>
          </p>
            <% end %>
          </td>
          <% if @book.user.id == current_user.id %>
          <td><%= link_to "Edit", edit_book_path(@book), class: "btn btn-sm btn-success" %></td>
          <td><%= link_to "Destroy", book_path(@book), method: :delete, class: "btn btn-sm btn-danger" %></td>
          <% end %>
          <td>
            <p>コメント数：<%= @book.book_comments.count %></p>
          </td>
        </tbody></tr>
       </table>
          <% @book.book_comments.each do |book_comment| %>
            <%= book_comment.user.name %>
            <%= attachment_image_tag book_comment.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
            <%= book_comment.comment %>
             <% if book_comment.user == current_user %>
            <div>
              <%= link_to "削除", book_book_comment_path(book_comment.book, book_comment), method: :delete, class: "btn btn-destroy" %>
            </div>
          <% end %>
          <% end %>
          <%= form_with(model:[@book, @book_comment], local: true) do |f| %>
              <%= f.text_area :comment, class: "form-control comment" %><br>
                <%= f.submit "送信" %>
          <% end %>
  </div>