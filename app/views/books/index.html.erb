<h1>New book</h1>

<%= form_with model:@book, local:true do |f| %>

<h4>Title</h4>
<%= f.text_field :title %>

<h4>Option</h4>
<%= f.text_area :body %>

<%= f.submit 'Create Book' %>

<% end %>


<h1>Books</h1>
    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Option</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |book| %>
        <tr>
        <td><%= attachment_image_tag post_image.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></td>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        </tr>
        <% end %>
      </tbody>
    </table>

